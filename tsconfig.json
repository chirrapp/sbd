{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./*.ts", "./src/**/*.ts"],
  "compilerOptions": {
    // Resolve
    "rootDir": "./src",
    "paths": {},
    // Output
    "target": "esnext",
    "outDir": "./dist",
    "tsBuildInfoFile": "${configDir}/.ts/tsconfig.tsbuildinfo",
    "declaration": true,
    "emitDeclarationOnly": false,
    // Modules
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "moduleDetection": "force", // Stop treating files without imports/exports as single global scripts
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    // Env
    "lib": ["ESNext"],
    "types": ["node"],
    // Checks
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    // Build
    "incremental": true
  }
}
